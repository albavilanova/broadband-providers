generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userId    String     @id @default(cuid())
  firstName String
  lastName  String
  email     String
  locations Location[]
  contracts Contract[]
}

model Contract {
  contractId    Int    @id @default(autoincrement())
  provider      String
  downloadSpeed Float
  uploadSpeed   Float
  userId        String
  user          User   @relation(fields: [userId], references: [userId])
}

model Location {
  locationId Int    @id @default(autoincrement())
  country    String
  state      String
  city       String
  userId     String
  user       User   @relation(fields: [userId], references: [userId])
}