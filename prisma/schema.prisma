generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  providerId Int        @id @default(autoincrement())
  provider   String
  location   Location[]
  deals      Deal[]
}

model Location {
  locationId Int      @id @default(autoincrement())
  country    String
  state      String
  city       String
  postalCode Int
  providerId Int      @unique
  provider   Provider @relation(fields: [providerId], references: [providerId])
}

model Deal {
  dealId    Int       @id @default(autoincrement())
  downloadSpeed Float
  uploadSpeed   Float
  price Float
  startDate DateTime
  endDate DateTime
  provider      Provider? @relation(fields: [providerId], references: [providerId])
  providerId    Int?
}
