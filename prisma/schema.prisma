generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  providerId   Int       @id @default(autoincrement())
  name         String
  headquarters String
  products     Product[]
}

model Product {
  productId  Int      @id @default(autoincrement())
  name       String
  price      String
  countries  Int
  providerId Int
  provider   Provider @relation(fields: [providerId], references: [providerId])
  users      User[]
}

model User {
  userId       String  @id @default(cuid())
  firstName    String
  lastName     String
  email        String
  organization String
  position     String
  productId    Int
  product      Product @relation(fields: [productId], references: [productId])
}
