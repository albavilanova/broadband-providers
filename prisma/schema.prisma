generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  providerId Int        @id @default(autoincrement())
  provider   String
  location   Location[]
  products   Product[]
}

model Location {
  locationId Int      @id @default(autoincrement())
  country    String
  state      String
  city       String
  postalCode Int
  providerId Int      @unique
  provider   Provider @relation(fields: [providerId], references: [providerId])
}

model Product {
  productId     Int        @id @default(autoincrement())
  downloadSpeed Float
  uploadSpeed   Float
  price         Float
  provider      Provider?  @relation(fields: [providerId], references: [providerId])
  providerId    Int?
  contracts     Contract[]
}

model Contract {
  contractId Int      @id @default(autoincrement())
  productId  Int      @unique
  product    Product  @relation(fields: [productId], references: [productId])
  startDate  DateTime
  endDate    DateTime
}
