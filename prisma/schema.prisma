generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Provider {
  providerId   Int        @id @default(autoincrement())
  name         String
  headquarters String
  products     Product[]
  contracts    Contract[]
}

model Product {
  productId  Int        @id @default(autoincrement())
  price      String
  variables  String[]
  countries  Int
  locations  Location[]
  providerId Int        @unique
  provider   Provider   @relation(fields: [providerId], references: [providerId])
  contracts  Contract[]
}

model Location {
  locationId Int     @id @default(autoincrement())
  country    String
  state      String
  city       String
  productId  Int     @unique
  product    Product @relation(fields: [productId], references: [productId])
}

model User {
  userId       String     @id @default(cuid())
  firstName    String
  lastName     String
  email        String
  organization String
  position     String
  contracts    Contract[]
}

model Contract {
  contractId Int      @id @default(autoincrement())
  startDate  DateTime
  endDate    DateTime
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [userId])
  productId  Int      @unique
  product    Product  @relation(fields: [productId], references: [productId])
  providerId Int      @unique
  provider   Provider @relation(fields: [providerId], references: [providerId])
}
